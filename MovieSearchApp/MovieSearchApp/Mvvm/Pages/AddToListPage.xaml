<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieSearchApp.Mvvm.Pages.AddToListPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding DetailsModel.Title}" />
            <Label Text="Comments"/>
            <Entry Text="{Binding MovieComments}"/>
            <Label Text="Rating"/>
            <Entry Text="{Binding MovieRating}"/>
            <Button Text="Save" Command="{Binding SaveCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>